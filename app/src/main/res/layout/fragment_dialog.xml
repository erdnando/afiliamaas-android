<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.android.gms.samples.vision.ocrreader.FragmentDialog"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_redondo"
        android:text="Solicitud Incompleta"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Desea guardarla y modificarla posteriormente"
        android:background="@drawable/edittext_redondo"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <CheckBox
        android:id="@+id/confirmacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="SI"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/mensaje"
        android:layout_alignLeft="@+id/mensaje"
        android:layout_alignStart="@+id/mensaje"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/aceptar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:background="@drawable/botonredondo"
        android:layout_below="@+id/confirmacion"
        android:layout_alignRight="@+id/mensaje"
        android:layout_alignEnd="@+id/mensaje"
        android:layout_marginBottom="10dp"
        android:onClick="foto"/>

</RelativeLayout>
