<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.android.gms.samples.vision.ocrreader.FragmentTodas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="#B2FF59"
                android:text="ID: 177"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prueba Registro Bueno"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:ignore="RtlCompat"
                android:layout_below="@+id/textView14"
                android:layout_alignRight="@+id/textView14"
                android:layout_alignEnd="@+id/textView14"
                android:layout_marginTop="28dp" />


            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de alta: 21/08/2017"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="RtlCompat"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/textView17"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView17"
                android:layout_alignEnd="@+id/textView17" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentario:"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="RtlCompat"
                android:layout_marginTop="27dp"
                android:layout_below="@+id/textView20"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView20"
                android:layout_alignEnd="@+id/textView20" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
