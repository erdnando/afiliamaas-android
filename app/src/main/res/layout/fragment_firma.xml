<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.android.gms.samples.vision.ocrreader.FragmentFirma"
    android:background="@drawable/edittext_redondo">

    <TextView
        android:id="@+id/Firma"
        android:text="Registre su firma"
        android:background="@drawable/textview_redondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Lienzo"
        android:layout_alignStart="@+id/Lienzo"
        android:layout_alignRight="@+id/Lienzo"
        android:layout_alignEnd="@+id/Lienzo" />

    <com.google.android.gms.samples.vision.ocrreader.ui.camera.Lienzo
        android:id="@+id/Lienzo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/Firma"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_redondo"
        android:layout_alignLeft="@+id/btnBorrarFirma"
        android:layout_alignStart="@+id/btnBorrarFirma"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnBorrarFirma"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botonredondo"
        android:text="Borrar"
        android:textSize="18dp"
        android:onClick="foto"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/Lienzo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnGuardarFirma"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botonredondo"
        android:text="Guardar"
        android:textSize="18dp"
        android:onClick="foto"
        android:layout_alignBaseline="@+id/btnBorrarFirma"
        android:layout_alignBottom="@+id/btnBorrarFirma"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
